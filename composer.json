{
    "name": "kledo/oauth2-app",
    "description": "Kledo OAuth2 Demo App for PHP",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.10",
        "vlucas/phpdotenv": "^5.3"
    },
    "autoload": {
        "files": [
            "helpers.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
